@using PalMercaditoApp.Models
@model LoginViewModel
<head>
    <link rel="stylesheet" href="~/Styles/fontello.css" />
    <link rel="stylesheet" href="~/Styles/LoginStyles.css" />
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Bebas Neue">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Oswald">
    <title>PalMercadito - Ingresar</title>
</head>

@{
    Layout = null;
}

<div id="mainContainer">
    @Html.Partial("_PartialLogoForRegistrationAndLogin")
    <section id="loginForm">
        <div id="userLogoContainer">
            <span id="userLogo" class="icon-user-circle-o"></span>
        </div>
        
        <h1>Inicia Sesión</h1>
        @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
        {
            @Html.AntiForgeryToken()

            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div id="emailContent">
                @Html.LabelFor(m => m.Email, "Email", htmlAttributes: new { id = "labelEmail" })
                @Html.TextBoxFor(m => m.Email, new { id = "emailTextbox" })
                @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
            </div>
            <br />
            <div id="passwordContent">
                @Html.LabelFor(m => m.Password, "Contraseña", htmlAttributes: new { id = "labelPassword" })
                @Html.PasswordFor(m => m.Password, new { id = "passwordTextbox" })
                @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
            </div>
            <br />
            <div id="rememberContent">
                @Html.CheckBoxFor(m => m.RememberMe)
                @Html.LabelFor(m => m.RememberMe, htmlAttributes: new { id = "labelRemember" })
            </div>
            <br />
            <div id="LoginButtonContent">
                <input type="submit" value="Ingresar" id="loginButtonLogin" />
            </div>
            <br />
            <div id="RegisterContent">
                @Html.ActionLink("Registrarse como usuario nuevo", "Register", routeValues: null, htmlAttributes: new { @class = "registerButton" })
            </div>
        }
    </section>
</div>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}